
<div class="row">
    <div id="dashHead" class="col-md-4 col-md-offset-4">
      <h1>To Do App Dashboard!</h1>
    </div>
</div>
<div class="row">
  <div id="dashBody" class="col-md-4 col-md-offset-4">
  <h2>Outstanding Tasklists (<%= @tasklists.count %>)</h2> <!-- display tasks due in next 1 week -->
  <!-- option to change filter/remove view -->

  <table class="table table-striped">
  
    <thead>
      <th>List Name</th>
      <th>Due Date</th>
      <th>Description</th>
      <th>View</th>
    </thead>
  
  <tbody>
  
  <% @tasklists.each do |tasklist| %>
    <tr>
      <td>
        <%= tasklist.name %>
      </td>
      <td>
        
        <%= tasklist.duedate.to_date %>
        
      </td>
      <td>
        <%= tasklist.description%>
      </td>
      <td >
        <%= link_to 'View', tasklist_path(id: tasklist.id), class:"btn btn-success" %>
      </td>
    </tr>

  <% end %>

  </tbody>

</table>
  
   <%= link_to 'Create New Tasklist', new_tasklist_path, class: "btn btn-primary btn-lg " %>

  </div>
</div>


<div class="row">
   <div id="archived" class="col-md-4 col-md-offset-4"> 
      <h2>Archived Tasklists</h2>
      <!-- TODO link to completed/archived tasklists --> 
  </div>
</div>
